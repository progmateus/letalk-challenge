{
  "openapi": "3.0.0",
  "info": {
    "title": "Challenge Letalk",
    "description": "This is api Challenge Letalk",
    "version": "1.0.0",
    "contact": {
      "email": "contact@email.com"
    }
  },
  "paths": {
    "/loans": {
      "post": {
        "summary": "Create a Loan",
        "description": "Route to Create a loan",
        "tags": [
          "Loans"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoanRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/LoanResponse"
                }
              }
            }
          },
          "400": {
            "description": "ERR_BAD_REQUEST"
          },
          "404": {
            "description": "ERR_STATE_NOT_FOUND"
          },
          "500": {
            "description": "ERR_INTERNAL_SERVER_ERROR"
          }
        }
      },
      "get": {
        "summary": "List Loans",
        "description": "Route to list all Loans",
        "tags": [
          "Loans"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/LoanResponse"
                  }
                }
              }
            }
          },
          "500": {
            "description": "ERR_INTERNAL_SERVER_ERROR"
          }
        }
      }
    },
    "/loans/simulate": {
      "post": {
        "summary": "Simulate a Loan",
        "description": "Route to simulate a loan",
        "tags": [
          "Loans"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoanRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Simulated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "schema": {
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "schema": {
                        "currentSimulation": {
                          "type": "object",
                          "schema": {
                            "$ref": "#/components/schemas/SimulationResponse"
                          }
                        },
                        "moreSimulations": {
                          "schema": {
                            "type": "array",
                            "items": {
                              "$ref": "#/components/schemas/SimulationResponse"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "ERR_BAD_REQUEST"
          },
          "404": {
            "description": "ERR_STATE_NOT_FOUND"
          },
          "500": {
            "description": "ERR_INTERNAL_SERVER_ERROR"
          }
        }
      }
    },
    "/states": {
      "get": {
        "summary": "List States",
        "description": "Route to list all States",
        "tags": [
          "States"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/State"
                  }
                }
              }
            }
          },
          "500": {
            "description": "ERR_INTERNAL_SERVER_ERROR"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoanRequest": {
        "type": "object",
        "properties": {
          "cpf": {
            "type": "string"
          },
          "state_id": {
            "type": "string"
          },
          "birth_date": {
            "type": "Date"
          },
          "balance": {
            "type": "number"
          },
          "installments_value": {
            "type": "number"
          },
          "created_at": {
            "type": "Date"
          },
          "updated_at": {
            "type": "Date"
          }
        }
      },
      "LoanResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "cpf": {
            "type": "string"
          },
          "state_id": {
            "type": "string"
          },
          "birth_date": {
            "type": "Date"
          },
          "balance": {
            "type": "number"
          },
          "balance_with_interest": {
            "type": "number"
          },
          "installments_value": {
            "type": "number"
          },
          "installments_times": {
            "type": "number"
          },
          "maturity_date": {
            "type": "Date"
          },
          "interest_value": {
            "type": "number"
          },
          "created_at": {
            "type": "Date"
          },
          "updated_at": {
            "type": "Date"
          }
        }
      },
      "State": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "uf": {
            "type": "string"
          },
          "interest": {
            "type": "number"
          },
          "created_at": {
            "type": "Date"
          },
          "updated_at": {
            "type": "Date"
          }
        }
      },
      "SimulationResponse": {
        "type": "object",
        "properties": {
          "balance": {
            "type": "string"
          },
          "balance_with_interest": {
            "type": "number"
          },
          "interest": {
            "type": "number"
          },
          "installments_value": {
            "type": "number"
          },
          "installments_times": {
            "type": "number"
          },
          "maturity_date": {
            "type": "Date"
          }
        }
      }
    }
  }
}